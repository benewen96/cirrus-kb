	<script src='/js/ext/site.min.js'></script>
  <div class="container">
    <div class='row'>
      <h2>{{name}}</h2>
      <h4>By {{author}} </h4>
    </div>
    <div class='row'>
      <div class="col-md-6" style='padding-bottom:20px'>
        <input type="text"  id='article_title' class="form-control" value="{{name}}">
      </div>
      <div class="col-md-6" style='padding-bottom:20px'>
        <input type="text"  id='author' class="form-control" value="{{author}}">
      </div>
    </div>

    <div class='row'>
      <!--Text area for markdown editor -->
      <textarea id='mdeditor'></textarea>
    </div>

    <div class='row'>
      <div class='' style='width:20%;float:right;'>
        <!--Save button -->
        <button id='save' type="button" class="btn btn-normal btn-block">Save</button>
      </div>
    </div>
    <div class='row'>
      <button type="button" onclick="window.location.href='/browse'" class="btn btn-danger">Back</button>
      <button id='salesforce' type="button" onclick="" class="btn btn-danger">View on Salesforce</button>
    </div>
  </div>

  <script src='/js/updateEntry_bundle.js'></script>

  <span id='raw' style='display:none'>{{rawArticle}}</span>
  <span id='url' style='display:none'>{{url}}</span>
  <span id='id' style='display:none'>{{id}}</span>
